<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBckg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_group"
        android:id="@+id/textView15"
        android:textColor="@android:color/black"
        android:layout_margin="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinPeriods"
            android:layout_weight="0"
            android:layout_margin="5dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnAddPeriod"
            android:src="@android:drawable/ic_input_add"
            android:layout_gravity="center"
            android:onClick="onClick" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_people"
                android:id="@+id/textView18"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:id="@+id/btnAddMember"
                        android:src="@android:drawable/ic_input_add"
                        android:onClick="onClick" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:id="@+id/btnDelMember"
                        android:src="@android:drawable/ic_delete"
                        android:layout_margin="5dp"
                        android:onClick="onClick" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_group"
                android:id="@+id/textView19"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:id="@+id/btnAddConsist"
                        android:src="@android:drawable/ic_input_add"
                        android:layout_margin="5dp"
                        android:onClick="onClick" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:id="@+id/btnDelConsist"
                        android:src="@android:drawable/ic_delete"
                        android:layout_margin="5dp"
                        android:onClick="onClick"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvConsist"
        android:listSelector="@drawable/item_selector"
        android:layout_weight="3" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:id="@+id/btnEdit"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:onClick="onClick" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btnExit"
                android:src="@android:drawable/ic_delete"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:onClick="onClick"
                android:nestedScrollingEnabled="true" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>